<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VideoActivity"
    android:background="#000">
    <VideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:elevation="14dp"
        android:layout_marginTop="70dp">
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="center"
            android:id="@+id/playback_control_foward">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00/00:00"
                android:textColor="@color/colorBlack"
                android:textSize="25sp"
                android:id="@+id/forward_text"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_fast_forward_black_24dp"/>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="center"
            android:id="@+id/playback_control_backward">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_fast_rewind_black_24dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00/00:00"
                android:textColor="@color/colorBlack"
                android:textSize="25sp"
                android:id="@+id/backward_text"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:elevation="10dp"
        android:id="@+id/control_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/title_background">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
                android:onClick="back"/>
            <TextView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/colorBlack"
                android:padding="10dp"
                android:textSize="20sp"
                android:id="@+id/video_title"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:id="@+id/play_control"
            android:layout_centerVertical="true">
            <ImageView
                android:layout_width="35dp"
                android:onClick="lock"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_lock_open_black_24dp"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:src="#7a000000"/>
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:onClick="playPause"
                android:id="@+id/play_button"
                android:src="@drawable/ic_pause_black_24dp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/control_background"
            android:weightSum="22">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_weight="4"
                android:text="00:00:00"
                android:id="@+id/current_time"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"/>
            <SeekBar
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="12"
                android:id="@+id/progress_bar"
                android:layout_gravity="center"
                android:scrollbarStyle="outsideOverlay"
                android:progress="20"
                android:max="100"
                style="@style/MySeekBar"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/remaining_time"
                android:textAlignment="center"
                android:layout_weight="4"
                android:text="00:00:00"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:padding="8dp"
                android:onClick="fullScreen"
                android:src="@drawable/ic_screen_rotation_black_24dp"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="20dp"
        android:visibility="gone"
        android:id="@+id/lock_screen">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:onClick="unlock"
            android:background="#000"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_lock_outline_black_24dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:elevation="15dp"
        android:id="@+id/volume_control"
        android:layout_alignParentRight="true">
        <ProgressBar
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:max="100"
            android:progress="33"
            android:id="@+id/volume_slider"
            android:progressDrawable="@drawable/volume_bar"
            android:layout_marginBottom="70dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:visibility="invisible"/>
    </RelativeLayout>

</RelativeLayout>